{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
    "routes": [
      {
        "src": "/(.*)",
        "dest": "index.php/movies/index"
      },
      {
        "src": "/listMovie",
        "dest": "/movies/index"
      },
      {
        "src": "/crearMovie",
        "dest": "/movies/crear"
      },
      {
        "src": "/guardarMovie",
        "dest": "/movies/guardar"
      },
      {
        "src": "/borrar/:num",
        "dest": "/movies/borrar/:num"
      },
      {
        "src": "/editar/:num",
        "dest": "/movies/editar/:num"
      },
      {
        "src": "/actualizarMovie",
        "dest": "/movies/actualizar"
      }
    ],
    "build": {
      "env": {
        "CI_ENVIRONMENT": "production",
        "PHP_VERSION": "7.4"
      }
    }
  }
